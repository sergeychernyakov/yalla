<section id="header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xs-12 col-sm-12 flush">
        {{site-header
          canSignUp=canSignUp
          showCreateAccount=(route-action "showCreateAccount")
          showLogin=(route-action "showLogin")
          showKeyboard=(route-action "showKeyboardShortcutsHelp")
          toggleMobileView=(route-action "toggleMobileView")
          toggleAnonymous=(route-action "toggleAnonymous")
          logout=(route-action "logout")
        }}
      </div>
    </div>
  </div>
</section>

<section id="banner">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-xs-12 col-sm-7 flush xs-no-flush">
        <h1><span>{{i18n "ui.texts.banner.buy"}}, {{i18n "ui.texts.banner.sell"}},</span><br>& {{i18n "ui.texts.banner.trade_virtual_properties"}}</h1>
        <p>
          {{i18n "ui.texts.banner.text"}}
        </p>
        <ul class="btns">
          <li><a href="/c/p/start-checkout/">{{i18n "ui.texts.banner.get_started"}}</a></li>
          <li><a href="/t/how-does-yallaswap-work/">{{i18n "ui.texts.banner.learn_more"}}</a></li>
        </ul>
      </div>
      <div class="col-lg-5 col-xs-12 col-sm-5 text-right flush xs-no-flush">
        <img src="/assets/home_img.png">
      </div>
    </div>
  </div>
</section>
