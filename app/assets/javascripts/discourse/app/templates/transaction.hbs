<main role="main">

  {{#transaction}}
    <section id="blog_content" class="calculator">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-xs-12 col-sm-12 text-center">
            <h2>BUY, SELL & TRADE ANYTHING VIRTUAL IN SAFETY BY USING <br>SWAPD ESCROW SERVICES.</h2>

            <div class="calcy">
              {{#if this.currentUser}}
                <div class="row-step-1">
                  <div class="row justify-content-center">
                    <div class="col-lg-6 col-xs-12 col-sm-12 text-center">
                      <label>Are you the buyer or seller in this transaction? </label>
                      <select id="userSellerOrBuyer" type="text">
                        <option value="" disabled selected>CHOOSE</option>
                        <option value="seller">Seller</option>
                        <option value="buyer">Buyer</option>
                      </select>
                      <br>
                      <span style="color: red; visibility: hidden;">Select 1 Option</span>
                      <input type="hidden" value={{this.currentUser.username}} id="initiatorEmail">
                      <input type="hidden" value={{this.currentUser.id}} id="initiatorId">
                    </div>
                  </div>
                </div>
              {{/if}}

              <div class="row row-step-2 {{if this.currentUser "hidden"}}">
                <div class="col-lg-5 col-xs-12 col-sm-5 text-center">
                  <label>Sellers Email</label>
                  <input type="email" id="sellers-email" name="sellers-email" placeholder="enter selers email id">
                  <span style="color: red;">Enter valid email</span>
                  <input type="hidden" id="sellers-email-hidden">
                </div>
                <div class="col-lg-2 col-xs-12 col-sm-2 text-center">
                  <img src="/assets/convert.png">
                </div>
                <div class="col-lg-5 col-xs-12 col-sm-5 text-center">
                  <label>Buyers Email</label>
                  <input type="email" id="buyer-email" name="buyer-email" placeholder="enter buyers email id">
                  <span style="color: red;">Enter valid email</span>
                  <input type="hidden" id="buyer-email-hidden">
                </div>
              </div>

              <div class="row-step-3 hidden">
                <div class="row justify-content-center">
                  <div class="col-lg-6 col-xs-12 col-sm-12 text-center">
                    <label>Amount</label>
                    <input type="number" id="total-amount" name="total-amount" placeholder="enter total amount">
                    <span style="color: red;">Enter amount</span>
                  </div>
                </div>

                <div class="row justify-content-center">
                  <div class="col-lg-6 col-lg-offset-3 col-xs-12 col-sm-12 text-center">
                    <label>Ticket Type</label>
                    <input type="text" id="ticket-type" name="ticket-type" placeholder="enter type of ticket">
                    <span style="color: red;">Enter valid ticket type</span>
                  </div>
                </div>

                <div class="row justify-content-center">
                  <div class="col-lg-6 col-lg-offset-3 col-xs-12 col-sm-12 text-center">
                    <label>Payment Method</label>
                    <input type="text" id="payment-method" name="payment-method" placeholder="enter payment method">
                    <span style="color: red;">Enter payment method</span>
                  </div>
                </div>
                <span id="lastStep" style="color: green;visibility:hidden;">You are all done!</span>
              </div>
            </div>
            <a href="#" class="transaction-button" {{action "transaction" }}>Begin Transaction</a>
          </div>
        </div>
      </div>
    </section>
  {{/transaction}}
</main>
